<h1>Posts</h1>

<%= link_to 'New Post', new_post_path, :class => 'btn btn-primary' %>

<table class="table table">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Comment</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <th scope="row"><%= post.id %></th>
        <td><%= post.title %></td>
        <td><%= post.comment %></td>
        <td><%= post.user_id %></td>
        <td><%= link_to 'Show', post, :class => 'btn btn-primary' %></td>
        <% if can? :update, post %>
          <td><%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-default' %></td>
        <% end %>
        <% if can? :destroy, post %>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
